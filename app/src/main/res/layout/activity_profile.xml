<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Личный кабинет"
        android:textSize="28sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/profileUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя Фамилия"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:gravity="center" />

    <TextView
        android:id="@+id/profileUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@mail.com"
        android:textSize="16sp"
        android:textColor="@color/secondary_color"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/profileEditButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать профиль"
            android:textSize="16sp"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileNotificationsButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/profileNotificationsButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уведомления"
            android:textSize="16sp"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/profileEmptyOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="У вас пока нет заказов"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileOrdersRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/profileLoginButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:textSize="16sp"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="16sp"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <Button
        android:id="@+id/profileLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Выйти"
        android:backgroundTint="@color/secondary_color"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_marginBottom="90dp"/>


</LinearLayout>
