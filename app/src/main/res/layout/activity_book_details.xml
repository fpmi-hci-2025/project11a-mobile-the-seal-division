<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:layout_marginBottom="65dp">

    <LinearLayout
        android:id="@+id/detailsContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Обложка -->
        <ImageView
            android:id="@+id/detailsCover"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@drawable/book_cover" />

        <!-- Название -->
        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Авторы -->
        <TextView
            android:id="@+id/detailsAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color" />

        <!-- Издательство -->

        <!-- Рейтинг -->
        <TextView
            android:id="@+id/detailsPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color" />

        <RatingBar
            android:id="@+id/detailsRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize="0.1" />

        <!-- Цена -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Новая (основная) цена -->
            <TextView
                android:id="@+id/detailsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Старая зачеркнутая цена (по умолчанию скрыта) -->
            <TextView
                android:id="@+id/detailsOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/detailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_color" />

        <!-- Кнопки покупки и избранного -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/detailsBuyButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="В корзину"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/detailsFavoriteButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:backgroundTint="@color/secondary_color"
                app:icon="@drawable/ic_bookmark"
                app:iconSize="30dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/detailsAvailableDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:visibility="gone" />
        <!-- Кнопка подписки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/subscribeButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Подписаться на издательство"
            android:textColor="@color/white"
            app:backgroundTint="@color/secondary_color" />

        <!-- Раздел отзывов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Отзывы"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/reviewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addReviewButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Оставить отзыв"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_color" />

        <!-- Нижняя навигация -->


    </LinearLayout>
    </LinearLayout>

</ScrollView>
